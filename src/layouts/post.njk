---
layout: base
---
<div class="container">
    <div class="title-container">
        <a href="/posts/">Back</a>
        <h1 style="view-transition-name: post-{{ id }}">{{ title }}</h1>
    </div>
    <article class="post">
        {{ content | safe }}
        <div class="utterances"></div>
        <script src="https://utteranc.es/client.js"
            repo="gingerchew/ginger.wtf-2024"
            issue-term="title"
            theme="preferred-color-scheme"
            crossorigin="anonymous"
            async>
        </script>
    </article>
</div>