<footer class="site-footer" role="contentinfo">
    <div class="site-footer__inner container">
        <p>
            <span>made with {emoji} by {% serifName %}</span>
            <a href="/feed.xml">
                <span class="visually-hidden">RSS</span>
                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-rss"><path d="M4 11a9 9 0 0 1 9 9"></path><path d="M4 4a16 16 0 0 1 16 16"></path><circle cx="5" cy="19" r="1"></circle></svg>
            </a>
        </p>
        <div>
            <theme-select>
                <label for="$themeSelect">Theme</label>
                <select ref="select" id="$themeSelect" data-theme="default" onchange="localStorage.t=this.dataset.theme=this.value;umtc()">
                    <option value="default" ref="default">Default</option>
                    <option value="red">Red</option>
                    <option value="blue">Blue</option>
                    <option value="green">Green</option>
                    <option value="arc">Arc (Experimental)</option>
                </select>
            </theme-select>
        </div>
    </div>
</footer>
