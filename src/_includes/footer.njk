<footer class="site-footer" role="contentinfo">
    <div class="site-footer__inner container">
        <div class="site-footer__inner--left">
            <span>made with <rand-emoji>ðŸŒ¸</rand-emoji> by <a href="{{ meta.url }}" class="{% if layout == 'post' %}p-author h-card{% endif %}">{% serifName %}</a></span>
            <span class="site-footer__meta">
                <rss-report>
                    <a href="/feed.xml" class="icon-link">
                        <span class="visually-hidden">RSS</span>
                        <span class="rss-icon" aria-hidden="true" style="--size: 1.25rem;--curve-width: 1px;"></span>
                    </a>
                </rss-report>
                <a href="/tags/" class="icon-link">
                    <span class="visually-hidden">View tag cloud</span>
                    <svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-cloud">
                        <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z"></path>
                    </svg>
                </a>
                {% include "randomArticle.njk" %}
                {%- if stats.pageviews.value %}
                <span class="hit-counter">hits: {{ stats.pageviews.value }}</span>
                {% endif %}
            </span>
        </div>
        {% include "themeSelect.njk" %}
    </div>
</footer>
